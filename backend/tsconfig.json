{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "allowJs": true,
      "checkJs": false
    },
    "include": [
      "server.ts",
      "routes/**/*.ts",
      "middlewares/**/*.ts",
      "types/**/*.d.ts"
    ]
}
  